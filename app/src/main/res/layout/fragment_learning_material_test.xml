<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/answer_effect_frame_layout">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/learning_material_test_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:background="#FFF"
        android:backgroundTint="#FFF"
        android:tag="LearningMaterialTestFragment"
        tools:context="com.example.shokiterashita.learningmaterial.views.fragments.LearningMaterialTestFragment">


        <LinearLayout
            android:id="@+id/material_test_label_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/material_test_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="単語テスト"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/material_test_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textSize="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_test_number_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/currentTestNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>
            <TextView
                android:id="@+id/testSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"/>
        </LinearLayout>

        <TextView
            android:id="@+id/testWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textSize="48dp"
            android:textColor="#222"
            android:text="general"/>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="85dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/choice_a"
                android:textSize="20dp"
                android:textColor="#666"
                android:background="@drawable/answer_button_black"

                android:layout_marginTop="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="一般的な"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/choice_b"
                android:textSize="20dp"
                android:textColor="#666"
                android:background="@drawable/answer_button_black"

                android:elevation="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="包括的な"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/choice_c"
                android:textSize="20dp"
                android:textColor="#666"
                android:background="@drawable/answer_button_black"

                android:layout_marginTop="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:text="専門的な" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/incorrect_image"
        android:layout_width="215dp"
        android:layout_height="205dp"
        android:src="@drawable/incorrect"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/correct_image"
        android:layout_width="208dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/correct" />

    <TextView
        android:id="@+id/animated_answer_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:text="2.19"
        android:textSize="50dp"
        android:textColor="@color/correctAnswerTimeColor"
        />

    <TextView
        android:id="@+id/animated_instant_answer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"
        android:text="瞬間回答"
        android:textSize="30dp"
        android:textColor="@color/instantAnswerColor"
        />

    <View
        android:id="@+id/black_sheet_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/animated_finish_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"
        android:text="FINISH"
        android:textSize="50dp"
        android:textColor="@color/colorWhite"
        />


    <TextView
        android:id="@+id/count_down_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="56dp"
        android:textColor="@color/colorWhite"
        android:text=""/>


</FrameLayout>
