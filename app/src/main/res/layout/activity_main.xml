<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/content_layout"
    tools:context="com.example.shokiterashita.learningmaterial.views.activities.MainActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/toFragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/toTestListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTLIST"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />
        <Button
            android:id="@+id/toWordListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WORDLIST"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
