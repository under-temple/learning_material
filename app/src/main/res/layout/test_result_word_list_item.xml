<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_glay"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/judgement_imageview"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/correct"/>

        <TextView
            android:id="@+id/answerd_word_en_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:paddingTop="7dp"
            android:layout_weight="1"
            android:text="generala"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer_time_textvew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingTop="7dp"
                android:text="11.25"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="秒"/>
        </LinearLayout>

        <TextView
            android:id="@+id/answerd_word_ja_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="7dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="全般的な"/>
        <ImageView
            android:id="@+id/test_result_pronounce_icon_image_view"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:src="@drawable/pronounce_icon" />
    </LinearLayout>


</LinearLayout>